{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "htcondor": {
            "type": "object",
            "properties": {
                "cvmfs": {
                    "type": "object",
                    "properties": {
                        "defaultLocalConfig": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "content": {
                                        "type": "string"
                                    },
                                    "file": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "image": {
                            "type": "string"
                        },
                        "pullPolicy": {
                            "type": "string"
                        },
                        "replicas": {
                            "type": "integer"
                        },
                        "repoList": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "master": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "hostname": {
                            "form": "true",
                            "type": "string"
                        },
                        "publicIP": {
                            "form": "true",
                            "type": "string"
                        },
                        "service": {
                            "type": "object",
                            "properties": {
                                "nodePort": {
                                    "title": "Collector port",
                                    "form": true,
                                    "type": "integer"
                                }
                            }
                        }
                    }
                },
                "schedd": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "squid": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "ttsCache": {
                    "type": "object",
                    "properties": {
                        "iamClientId": {
                            "form": true,
                            "type": "string"
                        },
                        "iamClientSecret": {
                            "form": true,
                            "type": "string"
                        },
                        "iamToken": {
                            "form": true,
                            "type": "string"
                        },
                        "image": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "wn": {
                    "type": "object",
                    "properties": {
                        "args": {
                            "type": "string"
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "form": true,
                                    "type": "string"
                                },
                                "tag": {
                                    "form": true,
                                    "type": "string"
                                }
                            }
                        },
                        "siteConfCMS": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "files": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "content": {
                                                "type": "string"
                                            },
                                            "filename": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "path": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "numCPUS": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}