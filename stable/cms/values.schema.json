{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "htcondor": {
            "type": "object",
            "properties": {
                "cvmfs": {
                    "type": "object",
                    "properties": {
                        "defaultLocalConfig": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "content": {
                                        "type": "string"
                                    },
                                    "file": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "image": {
                            "type": "string"
                        },
                        "pullPolicy": {
                            "type": "string"
                        },
                        "replicas": {
                            "type": "integer"
                        },
                        "repoList": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "master": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "hostname": {
                            "form": "true",
                            "type": "string"
                        },
                        "publicIP": {
                            "form": "true",
                            "type": "string"
                        },
                        "service": {
                            "type": "object",
                            "properties": {
                                "nodePort": {
                                    "title": "Collector port",
                                    "form": true,
                                    "type": "integer"
                                }
                            }
                        }
                    }
                },
                "schedd": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "squid": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "ttsCache": {
                    "type": "object",
                    "properties": {
                        "iamClientId": {
                            "form": true,
                            "type": "string"
                        },
                        "iamClientSecret": {
                            "form": true,
                            "type": "string"
                        },
                        "iamToken": {
                            "form": true,
                            "type": "string"
                        },
                        "image": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "wn": {
                    "type": "object",
                    "properties": {
                        "args": {
                            "type": "string"
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "form": true,
                                    "type": "string"
                                },
                                "tag": {
                                    "form": true,
                                    "type": "string"
                                }
                            }
                        },
                        "replicas": {
                            "type": "integer",
                            "title": "Number of WNs",
                            "form": true,
                            "render": "slider",
                            "sliderMin": 1,
                            "sliderMax": 1000
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "integer",
                                    "title": "WN CPUs",
                                    "form": true,
                                    "render": "slider",
                                    "sliderMin": 1,
                                    "sliderMax": 100
                                },
                                "memory": {
                                    "type": "string",
                                    "title": "WN Memory",
                                    "form": true,
                                    "render": "slider",
                                    "sliderMin": 1,
                                    "sliderMax": 16000,
                                    "sliderUnit": "Mi"
                                }
                            }
                        },
                        "slotType": {
                            "form": true,
                            "title": "Define the partitionable slot resources",
                            "type": "string"
                        },
                        "siteConfCMS": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "files": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "content": {
                                                "type": "string"
                                            },
                                            "filename": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "path": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "numCPUS": {
                                    "type": "integer",
                                    "title": "NumCPUs for SiteConf",
                                    "form": true,
                                    "render": "slider",
                                    "sliderMin": 1,
                                    "sliderMax": 100
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}