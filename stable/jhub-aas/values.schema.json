{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "jupyterhub": {
            "type": "object",
            "properties": {
                "cull": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "form": true,
                            "title": "Enable removal of idle notebooks"
                        }
                    }
                },
                "hostname": {
                            "type": "string",
                            "hidden": {
                                "value": false,
                                "path": "jupyterhub/ingress/enabled"
                            },
                            "title": "Hostname"
                },
                "ingress": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "form": true,
                            "title": "Use a custom hostname",
                            "description": "Enable the ingress resource that allows you to access the JHUB installation."
                        }
                    }
                },
                "spark": {
                    "type": "object",
                    "title": "Enable spark submission",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "form": true
                        }
                    }
                }
            }
        }
    }
}