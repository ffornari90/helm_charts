{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "jupyterhub": {
            "type": "object",
            "properties": {
                "cull": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "form": true,
                            "title": "Enable removal of idle notebooks"
                        }
                    }
                },
                "hub": {
                    "type": "object",
                    "properties": {
                        "extraEnv": {
                            "type": "object",
                            "properties": {
                                "ADMIN_OAUTH_GROUPS": {
                                    "type": "string"
                                },
                                "OAUTH_CALLBACK_URL": {
                                    "type": "string",
                                    "form": true
                                },
                                "OAUTH_ENDPOINT": {
                                    "type": "string"
                                },
                                "OAUTH_GROUPS": {
                                    "type": "string"
                                },
                                "WITH_GPU": {
                                    "type": "string"
                                },
                                "HTCONDOR_COLLECTOR_URL": {
                                    "type": "string",
                                    "title": "HTCondor collector url",
                                    "hidden": {
                                        "value": false,
                                        "path": "htcondor"
                                    }
                                },
                                "HTCONDOR_SCHEDD_NAME": {
                                    "type": "string",
                                    "title": "HTCondor schedd name",
                                    "hidden": {
                                        "value": false,
                                        "path": "htcondor"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "ingress": {
            "type": "boolean",
            "form": true,
            "title": "Use a custom hostname",
            "description": "Enable the ingress resource that allows you to access the JHUB installation."
        },
        "hostname": {
                    "type": "string",
                    "form": true,
                    "hidden": {
                        "value": false,
                        "path": "ingress"
                    },
                    "title": "Hostname"
        },
        "htcondor": {
                    "title": "Enable HTCondor integration",
                    "type": "boolean",
                    "form": true
                    }
        },        
        "spark": {
                    "type": "object",
                    "title": "Enable spark submission",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "form": true
                        }
                    }
        }
    }
}